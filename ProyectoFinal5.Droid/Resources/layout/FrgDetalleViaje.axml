<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:padding="10dp">
    <TextView
        android:text="Detalle del Viaje"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LblTituloDetalle"
        android:layout_marginBottom="25dp" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ScvDetalleViaje">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:text="Fecha de Inicio de Viaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LblFechaInicio" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TxtFechaInicio"
                android:enabled="false" />
            <TextView
                android:text="Fecha de Termino de Viaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LblFechaFin" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TxtFechaFin"
                android:enabled="false" />
            <TextView
                android:text="Kilometraje Inicial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LblKilometrajeInicial" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TxtKilometrajeInicial"
                android:enabled="false" />
            <TextView
                android:text="Kilometraje Final"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LblKilometrajeFinal" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TxtKilometrajeFinal"
                android:enabled="false" />
            <TextView
                android:text="Observaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LblObservaciones" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TxtObservaciones"
                android:enabled="false" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>